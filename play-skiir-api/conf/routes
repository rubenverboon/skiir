# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

OPTIONS    /*path               controllers.Application.options(path)

# Home page
GET        /                    controllers.Application.index

GET        /requests            controllers.API.requests
POST       /requests            controllers.API.addRequest

GET        /articles            controllers.API.articles
GET        /articles/single     controllers.API.singleArticle

GET        /explain/:text       controllers.Crawler.explain(text: String)

GET        /crawl/:url          controllers.Crawler.crawl(url: String)
GET        /crawl               controllers.Crawler.crawl(url: String ?= "")

# Testing
GET        /seed                controllers.Seed.seed

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
