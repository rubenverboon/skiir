# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

OPTIONS        /*path                                      controllers.Application.options(path)

# Home page
GET            /                                           controllers.Application.index

GET            /requests                                   controllers.api.Requests.requests
POST           /requests                                   controllers.api.Requests.addRequestForArticleUrl
GET            /requests/:rid                              controllers.api.Requests.getRequestById(rid: Long)
POST           /requests/:rid/annotations                  controllers.api.Annotations.addAnnotation(rid: Long)
POST           /requests/:rid/annotations/:eid/vote        controllers.api.Annotations.voteAnnotation(rid: Long,eid: Long)
GET            /requests/:rid/relatedArticles              controllers.api.Articles.getRelatedArticlesOfRequest(rid: Long)
GET            /requests/:rid/annotations                  controllers.api.Annotations.getAnnotationOfRequest(rid: Long)

GET            /articles                                   controllers.api.Articles.articles
GET            /articles/single                            controllers.api.Articles.articleByUrl(url)
GET            /articles/:id                               controllers.api.Articles.articleById(id: Long)
POST           /articles/:id/requests                      controllers.api.Requests.addRequestToArticle(id: Long)
GET            /articles/related/:id                       controllers.api.Articles.getRelatedArticles(id: Long)

GET            /explain/:text                              controllers.Crawler.explain(text: String)

GET            /crawl/:url                                 controllers.Crawler.crawl(url: String)
GET            /crawl                                      controllers.Crawler.crawl(url: String ?= "")

# Testing
GET            /seed                                       controllers.Seed.seed

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                               controllers.Assets.at(path="/public", file)
